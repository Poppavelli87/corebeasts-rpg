{
  "name": "corebeasts-rpg",
  "private": true,
  "version": "0.11.0",
  "description": "Retro-inspired monster RPG built with Phaser 3 + TypeScript + Vite.",
  "author": "Corebeasts Contributors",
  "main": "build/electron/main.mjs",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:desktop:web": "vite --host 127.0.0.1 --port 5173",
    "dev:desktop:electron": "wait-on tcp:5173 && npm run build:electron && cross-env ELECTRON_RENDERER_URL=http://127.0.0.1:5173 electron ./build/electron/main.mjs",
    "dev:desktop": "concurrently -k \"npm:dev:desktop:web\" \"npm:dev:desktop:electron\"",
    "typecheck": "tsc --noEmit",
    "build:web": "npm run typecheck && vite build",
    "build": "npm run build:web",
    "build:pages": "node scripts/build-pages.mjs",
    "zip:web": "node scripts/zip-web.mjs",
    "build:share": "npm run build:web && npm run zip:web",
    "build:electron": "esbuild electron/main.ts electron/preload.ts electron/renderer.ts --platform=node --format=esm --target=node20 --outdir=build/electron --out-extension:.js=.mjs",
    "build:desktop": "npm run build:web && npm run build:electron && electron-builder --win --dir",
    "build:desktop:win": "npm run build:web && npm run build:electron && electron-builder --win portable nsis",
    "build:desktop:mac": "npm run build:web && npm run build:electron && electron-builder --mac dmg",
    "build:desktop:linux": "npm run build:web && npm run build:electron && electron-builder --linux AppImage",
    "release:notes": "node scripts/release-notes.mjs",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.11",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^15.15.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "build": {
    "appId": "com.corebeasts.rpg",
    "productName": "Corebeasts RPG",
    "directories": {
      "output": "release/desktop"
    },
    "files": [
      "dist/**/*",
      "build/electron/**/*",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "build/electron/main.mjs"
    },
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  }
}
